<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SunAnalyzer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="cardViewStyle">@style/CardViewStyle</item>
        <item name="ratingBarStyle">@style/customRatingBar</item>
        <item name="radioButtonStyle">@style/radioButtonStyle</item>
        <!--  <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>-->
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
        <!--<item name="android:statusBarColor">@color/white</item>-->

    </style>

    <style name="Widget.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="llVerticalMatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="llEditText" parent="llVerticalMatchWrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="llHorizontalMatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="checkboxMatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_5mdp</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
        <item name="android:textSize">@dimen/_12mdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
    </style>

    <style name="checkboxWrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
        <item name="android:textSize">@dimen/_12mdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
    </style>

    <style name="llVerticalMatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MaterialDialogSheetWithoutAnimation" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>



    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_32mdp</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textSize">@dimen/_13mdp</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
        <item name="android:layout_marginBottom">@dimen/_5mdp</item>
        <item name="android:layout_marginTop">@dimen/_2mdp</item>
    </style>

    <style name="ButtonGrayStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_32mdp</item>
        <item name="android:background">@drawable/bg_btn_gray</item>
        <item name="android:textSize">@dimen/_13mdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
        <item name="android:layout_marginBottom">@dimen/_5mdp</item>
        <item name="android:layout_marginTop">@dimen/_2mdp</item>
    </style>

    <style name="dividerStyleVertical">
        <item name="android:layout_width">@dimen/_1mdp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="dividerStyleHorizontal">
        <item name="android:layout_height">@dimen/_1mdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="headerTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_11mdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
    </style>

    <style name="textViewStyleExtraSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_10mdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
    </style>

    <style name="textViewStyleSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_11mdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
    </style>

    <style name="textViewStyleRegular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12mdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
    </style>

    <style name="textViewStyleLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14mdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
    </style>

    <style name="textViewStyleExtraLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16mdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
    </style>

    <style name="textViewStyleBoldRegular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12mdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/sans_pro_bold</item>
    </style>

    <style name="textViewStyleNoDataFound">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/_13mdp</item>
        <item name="android:textColor">@color/colorDivider</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
    </style>

    <style name="dividerHorizontal">
        <item name="android:layout_height">@dimen/_1mdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="toolbarTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/_15mdp</item>
        <item name="android:textColor">@color/toolbarColorArrow</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/sans_pro_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="radioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_11mdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
        <item name="android:paddingStart">@dimen/_8mdp</item>
        <item name="buttonTint">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="textInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextAppearance">@style/TextLabel</item>
        <item name="endIconTint">@color/colorDivider</item>
    </style>


    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_10mdp</item>
        <item name="android:textColorHint">@color/colorEdittextHint</item>
    </style>


    <style name="edtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textSize">@dimen/_13mdp</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorEdittextHint</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edittext_background_color</item>

    </style>

    <style name="edtStyleNumeric">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textSize">@dimen/_13mdp</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorEdittextHint</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edittext_background_color</item>
    </style>




    <style name="PickerTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/holo_green_light</item>
        <item name="tabTextColor">@color/colorPrimary</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="android:visibility">gone</item>
    </style>



    <style name="MyAlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog.Alert">
        <item name="android:textAppearanceSmall">@style/MyTextAppearance</item>
        <item name="android:textAppearanceMedium">@style/MyTextAppearance</item>
        <item name="android:textAppearanceLarge">@style/MyTextAppearance</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">#00000000</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sans_pro_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="llVerticalWrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="llHorizontalMatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="llHorizontalWrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="llHorizontalWrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="myRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12mdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorTransparent</item>
    </style>

    <style name="imageViewDialog">
        <item name="android:layout_width">@dimen/_30mdp</item>
        <item name="android:layout_height">@dimen/_30mdp</item>
        <item name="android:layout_marginLeft">@dimen/_10mdp</item>
        <item name="android:padding">@dimen/_3mdp</item>
        <item name="android:tint">@color/colorFlatIcon</item>
    </style>

    <style name="MyFragmentDialog" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">#00000000</item>
        <item name="android:windowBackground">#00000000</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:gravity">center</item>
    </style>



    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">1dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="customRatingBar" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="android:minHeight">@dimen/_15mdp</item>
        <item name="android:maxHeight">@dimen/_15mdp</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12mdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_10mdp</item>
        <item name="cornerSizeTopLeft">@dimen/_10mdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="backgroundColor">@color/colorPrimary</item>

    </style>

    <style name="numberPickerTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="divider">@color/colorTransparent</item>
        <item name="android:textSize">@dimen/_14mdp</item>
        <item name="android:typeface">@font/sans_pro_regular</item>
    </style>
    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/bg_fab_menu</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/_5mdp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sans_pro_regular</item>
    </style>

</resources>